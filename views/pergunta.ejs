<%- include('partials/hearder.ejs'); %>

<body>
    <%- include('partials/navbar.ejs'); %>

     <div class="container" >

        <br/>

        <div class="card">

            <div class="card-header">

                <h1 ><%= pergunta.titulo %> </h1>

                <p> <%= pergunta.descricao %> </p>

            </div>
        </div>

        <form method="POST" action="/responder">

             <label for="cResp"> 

                 <h3>Responda</h3>

                   Resposta :
              </label>
                  <textarea class="form-control" rows="11" id="cResp" placeholder="Digite a sua resposta" name="corpo"></textarea><br/>

                  <input type="hidden" name="pergunta" value="<%= pergunta.id %>"/>
                
               <button type="submit" class="btn btn-success"> Responder</button>

        </form>

        <hr/>
        
        <div class="card-header">

            <h3>Respostas </h3>

        </div>
         
         <%  respostas.forEach(resposta =>{  %>
            <br/>

            <div class="card">

                <div class="card-boby">

                    <p> <%= resposta.corpo %>  </p>
                </div>
            </div>

            <br/>

         <% }) %>

    </div>

</body>

<%-  include('partials/footer.ejs'); %>